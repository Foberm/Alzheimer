<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.maxim.alzheimer">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <application

        android:allowBackup="true"
        android:icon="@mipmap/simple_a"
        android:label="Alzheimer-Studie"
        android:launchMode="standard"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".StartPage"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Alzheimer-Studie"
            android:screenOrientation="landscape"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".QuizPage"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Alzheimer-Studie"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>

        <activity
            android:name=".TutorialPage"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Alzheimer-Studie Tutorial"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>

        <activity
            android:name=".ResultPage"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Alzheimer-Studie Auswertung"
            android:screenOrientation="landscape"
            android:theme="@style/FullscreenTheme">
        </activity>

        <activity
            android:name=".InstructionPage"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label=""
            android:screenOrientation="landscape"
            android:theme="@style/FullscreenTheme">
        </activity>
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />


    </application>


</manifest>