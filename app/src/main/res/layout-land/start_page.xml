<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.example.maxim.alzheimer.StartPage"
    android:padding="10dp">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="0px"
            android:layout_height="0px"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/nameInput"
            android:hint="Name.."
            android:selectAllOnFocus="true"
            android:layout_weight="0.08" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/birthDateInput"
            android:layout_weight="0.08"
            android:hint="Geburtsdatum.."
            android:focusable="false"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/diagnosisInput"
            android:layout_weight="0.08"
            android:hint="Diagnose.." />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.07"
            android:background="@android:color/transparent"
            android:weightSum="1">

            <TextView
                android:text="Kategorie:"
                android:layout_width="86dp"
                android:layout_height="match_parent"
                android:id="@+id/labelForDropDown"
                android:ems="1"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="4sp"
                android:layout_weight="0.04"
                android:textColor="@android:color/tertiary_text_light" />

            <Spinner
                android:layout_width="208dp"
                android:layout_height="match_parent"
                android:id="@+id/subDirInput"
                android:ems="10"
                android:layout_weight="0.21" />

            <Button
                android:text="+"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_newCategory"
                style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
                android:textSize="24sp"
                android:textColor="#c5c5c5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbl_itemsInCategory"
                android:layout_weight="0.04"
                android:textSize="18sp"
                android:textColor="#c5c5c5" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1sp"
            android:layout_marginLeft="3sp"
            android:layout_marginRight="3sp"
            android:background="#c5c5c5"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/numOfQuestionsInput"
            android:hint="Anzahl Fragen.. (Standard: 10)"
            android:layout_weight="0.08" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/timePerQuestionInput"
            android:hint="Zeit pro Frage.. (Standard: 30 sec)"
            android:layout_weight="0.08" />

        <Button
            android:id="@+id/btn_ToInstructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="40sp"
            android:paddingRight="40sp"
            android:layout_gravity="center_horizontal"
            android:text="Weiter"
            android:textSize="24sp"
            android:layout_weight="0.12"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textColor="#fff" />
    </LinearLayout>

        <TextView
            android:text="Programmed by: Maximilian WÃ¶dl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/copyright"
            android:textAlignment="textEnd"
            android:textColor="#ccc"
            android:layout_gravity="bottom" />


</FrameLayout>
