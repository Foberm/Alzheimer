<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#4a8ef9</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">#4a8ef9</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">#4a8ef9</item>
        <item name="colorControlHighlight">#4a8ef9</item>
        <item name="android:textColorHint">@android:color/tertiary_text_light</item>
        <item name="android:textColor">#000</item>

    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

</resources>
